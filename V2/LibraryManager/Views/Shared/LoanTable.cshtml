<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Available Copies</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td id="availableCopies-@book.Id">@book.AvailableCopies</td>
                <td>
                    @if (book.AvailableCopies > 0)
                    {
                        <button class="btn btn-success borrow-book" data-id="@book.Id">Borrow</button>
                    }
                    <button class="btn btn-danger return-book" data-id="@book.Id">Return</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $(".borrow-book").click(function () {
            let bookId = $(this).data("id");

            $.ajax({
                url: "/Library/Borrow",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ bookId: bookId }),
                success: function (response) {
                    let copiesElement = $("#availableCopies-" + bookId);
                    let newCopies = parseInt(copiesElement.text()) - 1;
                    copiesElement.text(newCopies);
                    if (newCopies === 0) {
                        $(".borrow-book[data-id='" + bookId + "']").prop("disabled", true);
                    }
                },
                error: function () {
                    alert("Failed to borrow book.");
                }
            });
        });

        $(".return-book").click(function () {
            let bookId = $(this).data("id");

            $.ajax({
                url: "/Library/Return",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ bookId: bookId }),
                success: function (response) {
                    let copiesElement = $("#availableCopies-" + bookId);
                    let newCopies = parseInt(copiesElement.text()) + 1;
                    copiesElement.text(newCopies);
                    $(".borrow-book[data-id='" + bookId + "']").prop("disabled", false);
                },
                error: function () {
                    alert("Failed to return book.");
                }
            });
        });
    });
</script>
