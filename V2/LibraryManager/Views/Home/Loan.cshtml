@model IEnumerable<LibraryManager.Models.Loan>

<div class="container mt-4">
    <h2 class="text-center fw-bold">📑 Loan Management</h2>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Book</th>
                <th>User</th>
                <th>Loan Date</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <td>@loan.Book.Title</td>
                    <td>@loan.UserId</td>
                    <td>@loan.LoanDate.ToShortDateString()</td>
                    <td>@loan.DueDate.ToShortDateString()</td>
                    <td>
                        <span class="badge @(loan.IsReturned ? "bg-success" : "bg-warning")">
                            @(loan.IsReturned ? "Returned" : "Active")
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#loanDetailsModal-@loan.Id">View</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
