@model IEnumerable<Author>

@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Author</a>
</p>

<div class="mb-3">
    <form asp-action="ByNationality" method="get" class="d-flex">
        <div class="input-group">
            <input type="text" name="nationality" class="form-control" placeholder="Search by nationality" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary">Search</button>
            </div>
        </div>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Nationality</th>
                <th>Birth Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.FirstName @author.LastName</td>
                    <td>@author.Nationality</td>
                    <td>@author.BirthDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@author.AuthorId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>