@model Book

@{
    ViewData["Title"] = "Book Details";
}

<h1>@Model.Title</h1>

<div class="card mb-4">
    <div class="card-body">
        <partial name="_BookDetails" model="Model" />
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>